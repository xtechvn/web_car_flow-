@using Entities.ViewModels.Car;
@using Entities.Models;
@model List<CartoFactoryModel>
<div >
    <table class="data-table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Giờ đăng ký online</th>
                <th>Tên KH (Trại, đại lý)</th>
                <th>Tên lái xe</th>
                <th>Số điện thoại</th>
                <th>Biển số xe</th>
                <th>Nhóm tài</th>
                <th>Giờ xe có mặt</th>
                <th>Giờ vào cân</th>
                <th>Giờ cân xong đầu vào</th>
                <th>Giờ vào máng</th>
                <th>Giờ cân xong đầu ra</th>
                <th>Thời gian xuất hàng(Phút)</th>
                <th>Tình trạng</th>
                <th>Tổng trọng lượng đã lấy(KG)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    var totalMinutes = item.VehicleWeighingTimeComplete.HasValue && item.VehicleWeighingTimeComeIn.HasValue  ? (item.VehicleWeighingTimeComplete.Value - item.VehicleWeighingTimeComeIn.Value).TotalMinutes: 0;
                    <tr>
                        <td>@item.RecordNumber</td>
                        <td>@(item.RegisterDateOnline != null ? item.RegisterDateOnline.Value.ToString("HH:mm dd/MM/yyyy") : "")</td>
                        <td>@item.CustomerName</td>
                        <td>@item.DriverName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.VehicleNumber</td>
                        <td>@item.LoadTypeName</td>
                        <td>@(item.VehicleArrivalDate != null ? item.VehicleArrivalDate.Value.ToString("HH:mm dd/MM/yyyy") : "")</td>
                        <td>@(item.VehicleWeighingTimeComeIn != null ? item.VehicleWeighingTimeComeIn.Value.ToString("HH:mm dd/MM/yyyy") : "")</td>
                        <td>@(item.VehicleWeighingTimeComeOut != null ? item.VehicleWeighingTimeComeOut.Value.ToString("HH:mm dd/MM/yyyy") : "")</td>
                        <td>@(item.VehicleTroughTimeComeIn != null ? item.VehicleTroughTimeComeIn.Value.ToString("HH:mm dd/MM/yyyy") : "")</td>
                        <td>@(item.VehicleWeighingTimeComplete != null ? item.VehicleWeighingTimeComplete.Value.ToString("HH:mm dd/MM/yyyy") : "")</td>
                        <td>@((int)Math.Round(totalMinutes))</td>
                        <td></td>
                        <td>@item.VehicleTroughWeight</td>

                    </tr>
                }
            }            
        </tbody>
    </table>
</div>