    <script>
        document.addEventListener("DOMContentLoaded", function () {
          // Chỉ bắt các dropdown kiểu "settings"
          const dropdowns = document.querySelectorAll(".settings-dropdown");
          if (!dropdowns.length) return;

          // Đóng tất cả dropdown đang mở (dùng khi mở cái khác / click ra ngoài)
          function closeAll(except) {
            document.querySelectorAll(".settings-dropdown.open").forEach(d => {
              if (d !== except) {
                d.classList.remove("open");
                const b = d.querySelector(".settings-btn");
                if (b) b.setAttribute("aria-expanded", "false");
              }
            });
          }

          dropdowns.forEach(wrap => {
            const button = wrap.querySelector(".settings-btn");
            const menu   = wrap.querySelector(".settings-menu");
            if (!button || !menu) return;

            // Toggle khi bấm nút
            button.addEventListener("click", function (e) {
              e.preventDefault();
              e.stopPropagation();
              const willOpen = !wrap.classList.contains("open");
              closeAll(wrap);
              wrap.classList.toggle("open", willOpen);
              button.setAttribute("aria-expanded", willOpen ? "true" : "false");
            });

            // Click bên trong menu không đóng
            menu.addEventListener("click", function (e) {
              e.stopPropagation();
            });
          });

          // Click ra ngoài: đóng
          document.addEventListener("click", function () {
            closeAll();
          });

          // Nhấn Esc: đóng
          window.addEventListener("keydown", function (e) {
            if (e.key === "Escape") closeAll();
          });
        });
    </script>




